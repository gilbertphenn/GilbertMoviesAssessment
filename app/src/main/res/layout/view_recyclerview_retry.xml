<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clReload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size16">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/check_your_internet"
            android:textSize="@dimen/text16"
            android:textColor="@color/grey_800"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginEnd="@dimen/size8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivReload"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/ivReload"
            android:layout_width="@dimen/size36"
            android:layout_height="@dimen/size36"
            android:src="@drawable/ic_reload"
            android:padding="@dimen/size8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@null"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>